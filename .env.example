# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Application Environment
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# External API Keys
# WHOIS API (example: WhoisXMLAPI)
WHOIS_API_KEY=your_whois_api_key_here
WHOIS_API_URL=https://www.whoisxmlapi.com/whoisserver/WhoisService

# SSL Certificate Analysis API
SSL_ANALYZER_API_KEY=your_ssl_api_key_here

# Reputation APIs
# VirusTotal API
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# Google Safe Browsing API
GOOGLE_SAFE_BROWSING_API_KEY=your_google_safe_browsing_api_key_here

# AI Content Analysis
# OpenAI API for content analysis
OPENAI_API_KEY=your_openai_api_key_here

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Database Configuration (if using)
DATABASE_URL=your_database_url_here

# Caching Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Logging Configuration
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000