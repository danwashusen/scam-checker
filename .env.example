# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# Application Environment
NODE_ENV=development

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# External API Keys
# WHOIS API (example: WhoisXMLAPI)
WHOIS_API_URL=https://www.whoisxmlapi.com/whoisserver/WhoisService

# SSL Certificate Analysis API

# Reputation APIs
# Google Safe Browsing API

GOOGLE_SAFE_BROWSING_API_KEY=your_google_safe_browsing_api_key_here

# AI Content Analysis
# AI Provider Selection (openai or claude)
AI_PROVIDER=openai

# OpenAI API for URL risk analysis
OPENAI_API_KEY=your_openai_api_key_here

# Claude API (alternative to OpenAI)
CLAUDE_API_KEY=your_claude_api_key_here

# AI Analysis Configuration
AI_ANALYSIS_ENABLED=true
AI_MODEL=gpt-4
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.1
AI_TIMEOUT=30000
AI_RETRY_ATTEMPTS=2
AI_COST_THRESHOLD=0.02

# AI Caching Configuration
AI_CACHE_ENABLED=true
AI_CACHE_TTL=86400000
AI_CACHE_MAX_SIZE=1000

# AI Rate Limiting
AI_RATE_LIMIT_ENABLED=true
AI_RATE_LIMIT_RPM=60

# AWS Configuration (for production deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Database Configuration (if using)
DATABASE_URL=your_database_url_here

# Caching Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Logging Configuration
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000
